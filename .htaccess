# ============================================================
# üî∞ ANPHA WEB - .htaccess Final (Seguran√ßa + Performance + SEO)
# ============================================================

# Ativar o mecanismo de reescrita
RewriteEngine On

# -------------------------------
# üîê For√ßar HTTPS e dom√≠nio principal (sem www)
# -------------------------------
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteRule ^ https://anphaweb.com.br%{REQUEST_URI} [L,R=301]

# -------------------------------
# ‚ö° Performance - Compress√£o GZIP
# -------------------------------
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

# -------------------------------
# üöÄ Cache de arquivos est√°ticos
# -------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 7 days"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# -------------------------------
# üß± Cabe√ßalhos de seguran√ßa
# -------------------------------
<IfModule mod_headers.c>
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"
</IfModule>

# -------------------------------
# üß† Prote√ß√£o contra m√©todos inseguros
# -------------------------------
<LimitExcept GET POST>
  Require all denied
</LimitExcept>

# -------------------------------
# üîí Bloquear acesso a arquivos sens√≠veis
# -------------------------------
<FilesMatch "(?i)\.(env|log|ini|bak|config|sql|git|htaccess)$">
  Require all denied
</FilesMatch>

# -------------------------------
# üõ°Ô∏è Bloqueia query strings suspeitas
# -------------------------------
RewriteCond %{QUERY_STRING} (\.\./|\.\%2f|base64_|GLOBALS|REQUEST|concat|union|select|insert|drop|alter|delete) [NC]
RewriteRule .* - [F]

# -------------------------------
# üö´ Desativa listagem de diret√≥rios
# -------------------------------
Options -Indexes

# -------------------------------
# üåê P√°gina inicial padr√£o
# -------------------------------
DirectoryIndex index.html

# -------------------------------
# ‚úÖ SEO e Navegadores
# -------------------------------
AddDefaultCharset UTF-8
AddLanguage pt-BR .html

# -------------------------------
# üß© Redirecionamento de erros amig√°veis
# -------------------------------
ErrorDocument 403 /403.html
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
